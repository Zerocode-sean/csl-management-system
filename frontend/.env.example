# =====================================================
# CSL Management System - Frontend Environment Variables
# =====================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control
# =====================================================

# =====================================================
# API CONFIGURATION
# =====================================================
# Backend API URL (must match backend PORT and host)
VITE_API_URL=http://localhost:5000/api/v1

# Backend base URL (without /api/v1 prefix)
VITE_BACKEND_URL=http://localhost:5000

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
# Application name displayed in UI
VITE_APP_NAME=CSL Management System

# Application version (displayed in footer/about)
VITE_APP_VERSION=1.0.0

# Organization name
VITE_ORG_NAME=EMESA Research and Consultancy

# =====================================================
# FEATURE FLAGS (Optional)
# =====================================================
# Enable/disable features during development
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_DEBUG_MODE=false

# =====================================================
# PRODUCTION SETTINGS
# =====================================================
# In production, update these values:
# - VITE_API_URL should point to your production backend API
# - VITE_BACKEND_URL should point to your production backend
# 
# Example production values:
# VITE_API_URL=https://api.emesa.com/api/v1
# VITE_BACKEND_URL=https://api.emesa.com
