# Development Dockerfile for Backend
FROM node:18-alpine

# Install development tools and Puppeteer dependencies
RUN apk add --no-cache \
    wget \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont

# Ensure consistent chromium executable paths and make them executable
RUN if [ -x "$(command -v chromium-browser)" ]; then \
      ln -sf $(command -v chromium-browser) /usr/bin/chromium || true; \
    elif [ -x "$(command -v chromium)" ]; then \
      ln -sf $(command -v chromium) /usr/bin/chromium-browser || true; \
    fi && \
    chmod +x /usr/bin/chromium || true || true

# Tell Puppeteer to use installed chromium
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true \
  PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies for TypeScript)
RUN npm ci

# Copy source code (will be overridden by volume mount in docker-compose)
COPY . .

# Expose port
EXPOSE 5000

# Health check using wget (available in alpine)
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:5000/health || exit 1

# Run development server with hot reload
CMD ["npm", "run", "dev"]
