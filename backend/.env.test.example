# =====================================================
# CSL Management System - Test Environment Variables
# =====================================================
# Copy this to .env.test for running tests
# The test setup will use these values automatically
# =====================================================

# =====================================================
# SERVER CONFIGURATION
# =====================================================
PORT=5099
NODE_ENV=test
API_PREFIX=/api/v1

# =====================================================
# TEST DATABASE CONFIGURATION
# =====================================================
# PostgreSQL Connection Settings for Testing
DB_HOST=localhost
DB_PORT=5432
DB_USER=csl_user
DB_PASSWORD=your_secure_password_here
DB_NAME=csl_test_db

# Connection Pool Settings (smaller for tests)
DB_POOL_MIN=1
DB_POOL_MAX=5

# =====================================================
# JWT AUTHENTICATION (Test Secrets)
# =====================================================
# Simplified secrets for testing
JWT_SECRET=test-jwt-secret-min-32-characters-long-for-testing-purposes
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test-refresh-secret-min-32-chars-for-testing
JWT_REFRESH_EXPIRES_IN=2h

# =====================================================
# CERTIFICATE GENERATION (Test Pepper)
# =====================================================
CSL_SECRET_PEPPER=test-csl-pepper-min-32-characters-long-for-testing-only

# =====================================================
# PUBLIC URLs (Test)
# =====================================================
PUBLIC_URL=http://localhost:3099
FRONTEND_URL=http://localhost:3099
BACKEND_URL=http://localhost:5099

# =====================================================
# CORS CONFIGURATION (Test)
# =====================================================
CORS_ORIGIN=http://localhost:3099,http://localhost:3000

# =====================================================
# RATE LIMITING (Disabled for Testing)
# =====================================================
RATE_LIMIT_WINDOW_MS=999999999
RATE_LIMIT_MAX_REQUESTS=999999

# =====================================================
# FILE STORAGE (Test)
# =====================================================
CERTIFICATES_DIR=test_certificates
MAX_FILE_SIZE=10485760

# =====================================================
# LOGGING (Test)
# =====================================================
LOG_LEVEL=error
LOG_DIR=test_logs
